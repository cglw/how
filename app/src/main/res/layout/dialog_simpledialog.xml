<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/black_dark"
            android:textSize="20sp" />

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <FrameLayout
            android:id="@+id/llayContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxHeight="200dp"
            android:minHeight="80dp">


            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxHeight="200dp"
                android:minHeight="80dp"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:text="内容"
                android:textColor="@color/black_mid"
                android:textSize="18sp" />

        </FrameLayout>
        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnDialogCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_btn_buttomleft"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_mid"
                android:textSize="18sp" />

            <View
                android:id="@+id/centerLine"
                android:background="@color/grey"
                android:layout_width="0.5dp"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/btnDialogConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_btn_buttomright"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black_mid"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>