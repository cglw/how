<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prettyyes.user.app.ui.order.ShipCompanyActivity">


    <com.prettyyes.user.app.view.lvandgrid.SwipeRecycleView
        android:id="@+id/swipe_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.prettyyes.user.app.view.LetterView
        android:id="@+id/letterview"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_blackmain_25"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="@dimen/font_big"
        android:visibility="gone"/>
</RelativeLayout>
