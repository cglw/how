<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhit"
    tools:context="com.prettyyes.user.app.fragments.mianpage.KolListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.prettyyes.user.app.fragments.MessageFragment">

        <RelativeLayout
            android:id="@+id/rel_Status_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            android:background="@color/white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_title"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="top"
                android:text="好手列表"
                android:textColor="@color/black_main"
                android:textSize="@dimen/font_big_more"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_message_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <include layout="@layout/layout_base_head_line"></include>

        </RelativeLayout>

        <include layout="@layout/fragment_simple_list" /><!--<RelativeLayout-->


    </LinearLayout>


</FrameLayout>
