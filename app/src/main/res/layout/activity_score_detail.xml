<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.prettyyes.user.app.ui.person.MedalAndScoreActivity">

        <!--<TextView-->
            <!--android:onClick="go_how_rule"-->
            <!--android:clickable="true"-->
            <!--android:layout_marginTop="20dp"-->
            <!--style="@style/tv_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:text="规则"-->
            <!--android:layout_marginBottom="@dimen/distance_normal"-->
            <!--android:layout_marginRight="@dimen/distance_small"-->
            <!--android:textColor="@color/secondaryTextBlack"-->
            <!--android:textSize="13sp"/>-->
        <LinearLayout
            android:layout_marginTop="@dimen/distance_normal"
            android:id="@+id/view_lool_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/distance_small"
            >

            <TextView
                style="@style/tv_content"
                android:layout_gravity="right"
                android:text="How值详情"
                android:textSize="11sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_small"
                android:src="@mipmap/right_arrow"
                android:tint="@color/black"/>

        </LinearLayout>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="48dp"
            android:src="@mipmap/score_cash"/>

        <TextView
            android:id="@+id/tv_score"
            style="@style/tv_title"
            android:layout_marginTop="22dp"
            android:text="140"
            android:textSize="27sp"
            android:textStyle="bold"/>

        <TextView
            style="@style/tv_title"
            android:layout_marginTop="22dp"
            android:text="可兑换How值"
            android:textColor="@color/secondaryTextBlack"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_total_score"
            style="@style/tv_title"
            android:layout_marginTop="22dp"
            android:text=""
            android:textColor="@color/hintBlack"
            android:textSize="11sp"
            />

        <com.prettyyes.user.app.view.tvbtnetv.CustumBgTextView
            android:id="@+id/custumtv_withdraw"

            style="@style/tv_title"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:clickable="true"
            android:gravity="center"
            android:text="可兑换：0元"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:radius="30dp"
            app:shapeTpe="rectangle"
            app:solidColor="@color/withdraw_enable"

            />

        <TextView
            android:layout_width="293dp"
            android:layout_height="38dp"
            android:layout_marginTop="34dp"
            android:background="@color/withdraw_caculate"
            android:gravity="center"
            android:text="@string/score_caculate"
            android:textColor="@color/textNormal"/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/score_rule_title"
            android:textColor="@color/textNormal"
            android:textSize="13sp"/>

        <View
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="6dp"
            android:layout_marginTop="7dp"
            android:background="@color/textBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center_horizontal"
            android:text="@string/score_rule"
            android:textColor="@color/textNormal"
            android:textSize="15sp"/>

        <com.prettyyes.user.app.view.tvbtnetv.CustumBgTextView
            android:id="@+id/custumtv_set_accout"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_marginTop="26dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/score_accout_set"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:radius="8dp"
            app:shapeTpe="rectangle"
            app:solidColor="@color/withdraw_account"
            app:strokeWith="1"
            >

        </com.prettyyes.user.app.view.tvbtnetv.CustumBgTextView>

        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/distance_normal"
            android:layout_marginTop="27dp"
            android:gravity="center_horizontal"
            android:text="@string/score_how"
            android:textColor="@color/textNormal"
            android:textSize="15sp"/>

    </LinearLayout>
</ScrollView>