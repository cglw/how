<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
      >


    <RelativeLayout
        android:id="@+id/view_head_parent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="@dimen/distance_normal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/myhead"/>

    </RelativeLayout>


    <com.prettyyes.user.app.view.app.TypefaceTextView
        android:id="@+id/tv_seller_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_head_parent"
        android:layout_marginRight="@dimen/distance_small"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/view_head_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="15"
        android:paddingBottom="2dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/theme_darkgreen"
        android:textSize="13sp"/>


    <ImageView
        android:src="@mipmap/ic_grade_haoshou"
        android:id="@+id/img_grade_title"
        android:layout_width="@dimen/grade_ic_width"
        android:layout_height="@dimen/grade_ic_width"
        android:scaleType="centerCrop"
        android:layout_alignTop="@id/view_head_parent"
        android:layout_toRightOf="@id/tv_seller_nickname"
        />
    <TextView
        android:id="@+id/tv_seller_ace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_head_parent"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/view_head_parent"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="@color/secondaryTextBlack"
        android:textSize="@dimen/font_small"/>


</merge>