<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rel_popup_getpic"
              android:layout_width="match_parent"
              android:layout_height="@dimen/template_input_height"
              android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:text="@string/price"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_title"/>

        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:background="@null"
            android:hint="@string/rmb"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLines="1"
            style="@style/tv_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:text="@string/freight"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_title"/>

        <EditText
            android:id="@+id/edit_freight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_small"
            android:background="@null"
            android:hint="@string/rmb"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            style="@style/tv_content"/>

    </LinearLayout>


</LinearLayout>