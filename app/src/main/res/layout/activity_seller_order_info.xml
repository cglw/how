<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey"
                android:padding="5dp"
                android:text="收货人信息"
                android:textColor="@color/black"
                android:textSize="@dimen/font_big"/>

            <LinearLayout
                android:id="@+id/lin_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey"
                android:padding="5dp"
                android:text="商品信息"
                android:textColor="@color/black"
                android:textSize="@dimen/font_big"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey"
                android:padding="5dp"
                android:text="订单信息"
                android:textColor="@color/black"
                android:textSize="@dimen/font_big"/>

            <LinearLayout
                android:id="@+id/lin_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_grey"
                android:padding="5dp"
                android:text="操作信息"
                android:textColor="@color/black"
                android:textSize="@dimen/font_big"/>

            <LinearLayout
                android:id="@+id/lin_do_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button

                android:id="@+id/btn_agree_cancel"
                style="@style/btn_select_red_round"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="同意退款"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_show_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.prettyyes.user.app.ui.appview.VeriCodeView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    style="@style/btn_select_red_round"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="退款"
                    android:visibility="visible"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
