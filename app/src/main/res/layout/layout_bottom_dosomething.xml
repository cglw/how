<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/layout_morecomment">

    <LinearLayout
        android:background="@drawable/select_layout"
        android:id="@+id/lin_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_moreCommentAdp_good"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_height="20dp"
            android:src="@mipmap/general_like_icon"
            android:tint="@color/theme_red" />

        <TextView
            android:id="@+id/tv_moreCommentAdp_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啧啧0"
            android:textColor="@color/theme_red"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/select_layout"
        android:id="@+id/lin_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lin_1"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_moreCommentAdp_bad"

            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_height="20dp"
            android:src="@mipmap/general_dislike_icon"
            android:tint="@color/theme_red" />

        <TextView
            android:id="@+id/tv_moreCommentAdp_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呸0"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/select_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1.2"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_moreCommentAdp_wishList"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_height="20dp"
            android:src="@mipmap/general_add_wishlist_icon"
            android:tint="@color/theme_red" />

        <TextView
            android:id="@+id/tv_moreCommentAdp_wishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_moreCommentAdp_wishList"
            android:text="添加心愿"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/select_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_moreCommentAdp_share"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_height="20dp"
            android:src="@mipmap/general_share_small_icon"
            android:tint="@color/theme_red" />

        <TextView
            android:id="@+id/tv_moreCommentAdp_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_moreCommentAdp_wishList"
            android:text="分享"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

</LinearLayout>