<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="102dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="30dp"
    android:layout_width="match_parent"
    android:background="@drawable/bg_round_white"
    android:clipChildren="false"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clipChildren="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_otherqueAdp_sendNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="狂野的小猫咪"
            android:textColor="@color/theme_lightgray"
            android:textSize="@dimen/font_mid" />

        <TextView
            android:background="@drawable/bg_oval_red_radius_5"
            android:text="同感"
            android:textColor="@color/theme_red"
            android:id="@+id/tv_otherqueAdp_zeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_small"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center">


        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:id="@+id/card_otherqueAdp_que"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/bg_round_white_10">

            <com.prettyyes.user.app.view.imageview.RoundImageView
                android:id="@+id/img_otherquestionAdp_queimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:borderRadius="0dp"
                android:src="@mipmap/ic_defaultimg" />

            <TextView

                android:id="@+id/tv_otherqueAdp_que_moreimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#44000000"
                android:text="更多"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_otherqueAdp_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_otherqueAdp_que"
            android:ellipsize="end"
            android:lines="2"
            android:text="我有一件这样的衣服，想穿出不一样的感觉，类似出游,想穿出不一样的感觉，类似出游"
            android:textColor="@color/theme_darkgreen"
            android:textSize="@dimen/font_mid" />


    </RelativeLayout>

</LinearLayout>