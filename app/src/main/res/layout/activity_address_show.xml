<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context="com.prettyyes.user.app.ui.person.AddressListActivity">

    <TextView
        android:id="@+id/tv_addressshow_addmore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/select_layout_themedarkgreen"
        android:gravity="center"
        android:text="+添加新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/font_big" />

    <ListView
        android:id="@+id/lv_addressshow_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_addressshow_addmore"
        android:divider="@color/grey_bg"
        android:dividerHeight="5dp"
        android:overScrollMode="never"
        android:padding="15dp"
        android:scrollbars="none"/>

</RelativeLayout>
