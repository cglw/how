<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_layout_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_serach_question"
        android:background="@drawable/select_layout_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_que_title"
            style="@style/tv_title"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:ellipsize="end"
            android:lines="1"
            android:text="这是一个什么问题呢？"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_que_ts_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_marginTop="@dimen/distance_small"
            android:ellipsize="end"
            android:lines="1"
            android:text="这边是回复哦，这个会回复很不错呢。。。。"/>

        <TextView
            android:id="@+id/tv_que_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_marginTop="@dimen/distance_4"
            android:ellipsize="end"
            android:lines="1"
            android:text="11个回复   3个收藏"
            android:textColor="@color/hintBlack"/>
    </LinearLayout>
</LinearLayout>