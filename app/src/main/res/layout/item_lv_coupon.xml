<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_coupon_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/img_coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_coupon_blue" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/img_coupon_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/tv_coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="男装二次购买满100-50"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000"
                android:textColor="@color/white"
                android:textSize="48sp" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="规则是："
            android:textColor="@color/black_main"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_coupon_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="满100减50元"

            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_couponAdp_coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="• 优惠码：shdashdka"
            android:textColor="@color/black_main"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_coupon_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="截止2019-03-01"
            android:textColor="@color/white"
            android:textSize="8sp" />

        </LinearLayout>

</RelativeLayout>