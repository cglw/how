<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>


        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buybuybuy"
            android:drawableLeft="@drawable/video_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone"/>

        <LinearLayout
            android:background="@drawable/bg_rectangle_gradient"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
           >
            <com.prettyyes.user.app.view.progress.CirclePercentView
                android:id="@+id/cprogress"
                app:cp_bigColor="@color/grey"
                app:cp_smallColor="@color/black"
                android:layout_width="30dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cp_percent="70"
                android:layout_height="30dp"/>


        <!--<TextView-->
            <!--android:layout_gravity="center"-->
            <!--android:id="@+id/tv_progress"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center_vertical|right"-->
            <!--android:text="0%"-->
            <!--android:textColor="@color/secondaryTextBlack"-->
            <!--android:textSize="@dimen/font_content"-->
            <!--android:textStyle="bold"/>-->

        </LinearLayout>
        <!--android:background="@drawable/bg_rectangle_gradient"-->


        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/delet_zhaopian_1x"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>