<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_checkorderAdptwo_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="约会必杀套装"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/main_black"
        android:textSize="@dimen/font_big"></TextView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="93.5dp"
        android:background="@drawable/select_layout"
        android:id="@+id/rel_checkorderAdptwo_bottom"
        >

        <ImageView
            android:id="@+id/img_checkorderAdpthree_uintimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_defaultimg" />


        <RelativeLayout
            android:layout_marginRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/img_checkorderAdpthree_uintimg"
            >

            <TextView
                android:id="@+id/tv_checkorderAdpthree_uintname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="POKER家秋新品 简约COS风手镯"
                android:textColor="@color/main_black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_checkorderAdpthree_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_checkorderAdpthree_uintname"
                android:layout_marginTop="5dp"
                android:text="￥169.00"
                android:textColor="@color/main_black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:text="购买数量："
                android:textColor="@color/main_black"
                android:textSize="9dp" />

            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/tv_checkorderAdpthree_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="X 1"
                android:textColor="@color/main_black"
                android:textSize="@dimen/font_big_more" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/line_checkorderAdpthree"
        style="@style/line_grey"></View>
</LinearLayout>