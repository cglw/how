<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subject"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="#FDB4A2">

    <ImageView
        android:id="@+id/img_covery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_left"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_marginTop="33dp"
                android:background="@color/black_subject"/>

            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="243dp"
                android:layout_marginTop="7dp">

                <View
                    android:layout_width="205dp"
                    android:layout_height="238dp"
                    android:background="@drawable/bg_retange_translate_2"/>

                <LinearLayout
                    android:layout_width="205dp"
                    android:layout_height="238dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_retange_white_2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <TextView
                            android:id="@+id/tv_topic_collect"
                            android:layout_width="71dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/how_topic_like_icon"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingLeft="18dp"
                            android:text="+ 关注"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_small"/>

                        <TextView
                            android:id="@+id/tv_topic_title"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_toLeftOf="@id/tv_topic_collect"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black_subject"
                            android:textSize="@dimen/font_mid"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black_subject"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/topic_icon1"/>

                        <TextView
                            android:id="@+id/tv_topic_topic_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="19dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/topic_icon2"/>

                        <TextView
                            android:id="@+id/tv_topic_person_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="19dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/topic_icon3"/>

                        <TextView
                            android:id="@+id/tv_topic_word_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small"/>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_marginTop="7dp"
                android:background="@color/black_subject"></View>

            <TextView
                android:id="@+id/tv_topic_desc_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/tv_topic_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/black_subject"
                android:textSize="6sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lin_left"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_topic_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="> 提问"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:clickable="true"-->
            <!--android:text="> 关注"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="12sp"/>-->

            <TextView
                android:id="@+id/tv_topic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="> 分享"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


