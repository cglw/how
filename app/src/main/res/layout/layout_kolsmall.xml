<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="20dp">

    <RelativeLayout
        android:id="@+id/rel_moreCommentAdp_header"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginRight="17dp">

        <ImageView
            android:id="@+id/img_moreCommentAdp_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/myhead"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_nickmame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rel_moreCommentAdp_header"
        android:layout_toRightOf="@id/rel_moreCommentAdp_header"
        android:gravity="center_vertical">

        <com.prettyyes.user.app.view.app.TypefaceTextView
            android:id="@+id/tv_moreCommentAdp_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_small"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@color/theme_darkgreen"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/img_grade_title"
            android:layout_width="@dimen/grade_ic_width"
            android:layout_height="@dimen/grade_ic_width"
            android:src="@mipmap/best_haoshou"
            android:scaleType="centerCrop"
         />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_moreCommentAdp_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_nickmame"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/rel_moreCommentAdp_header"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="@color/secondaryTextBlack"
        android:textSize="@dimen/font_small"/>


</RelativeLayout>