<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_reply_answer_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/distance_normal"
    android:layout_marginRight="@dimen/distance_normal"
    android:background="@drawable/bg_retange_black_4"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_top_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_small"
        android:src="@mipmap/how_home_top_share"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal">

        <include layout="@layout/layout_seller_info_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tsReason"
        style="@style/tv_title"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:lineSpacingExtra="@dimen/distance_4"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="不一样的感觉，类似出游。不一样的感觉，类似出游。"/>

    <!--<include layout="@layout/layout_imgs"/>-->

    <!--<include layout="@layout/layout_vedio_covery"/>-->

    <!--<include  layout="@layout/layout_muti_spu"/>-->
    <include layout="@layout/merg_reply_common"/>

    <View
        style="@style/line_grey"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/distance_4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include layout="@layout/layout_bottom_muti_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/backgroundWhit"
        android:orientation="vertical"
        android:padding="@dimen/distance_small">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="sdasidasoudoas"
            android:textColor="#4A4A4A"
            android:textSize="12sp"/>

        <TextView
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="sdasidasoudoas"
            android:textColor="#4A4A4A"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="更多"
            android:textColor="@color/theme_red"
            android:textSize="10sp"/>


    </LinearLayout>

</LinearLayout>