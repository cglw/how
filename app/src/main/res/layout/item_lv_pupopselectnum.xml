<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_select_num"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_puponSelectNum_uintimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_defaultimg" />

    <LinearLayout
        android:id="@+id/rel_right"
        android:layout_width="30dp"
        android:gravity="center_vertical"
        android:layout_height="94dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <com.prettyyes.user.app.view.PupopAmountView
            android:id="@+id/pAmountview_wishlistInnerLvAdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.prettyyes.user.app.view.PupopAmountView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/rel_right"
        android:layout_toRightOf="@id/img_puponSelectNum_uintimg"
        android:paddingRight="5dp">

        <TextView
            android:paddingRight="5dp"
            android:id="@+id/tv_puponSelectNum_uintname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="POKER家秋新品 简约COS风手镯"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_wishlistInnerLvAdp_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_puponSelectNum_uintname"
            android:layout_marginTop="5dp"
            android:text="￥169.00"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_small" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_wishlistInnerLvAdp_remove"

            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_rang_grey"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Remove"
            android:textColor="@color/black"
            android:textSize="9dp" />

    </RelativeLayout>


</RelativeLayout>