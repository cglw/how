<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent_grey"
              android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="182dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/distance_normal"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/tv_title"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="描述"/>

            <TextView
                style="@style/tv_content"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="¥:100"
                android:textColor="@color/theme_red"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/distance_normal"
                android:src="@mipmap/ic_close"
                android:tint="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/distance_normal"
            android:background="@drawable/bg_order_info"
            android:padding="@dimen/distance_small">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_defaultimg"/>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/select_red_layout"
        android:text="@string/confirm"
        android:textColor="@color/white"/>


</LinearLayout>