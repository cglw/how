<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    tools:context=".app.ui.BindPhoneActivity">


        <com.prettyyes.user.app.view.tvbtnetv.EditTextDel
            android:id="@+id/edit_bindPhoneAct_telephone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:hint="@string/telephone_hint"
            android:textSize="@dimen/font_big"
            android:inputType="phone"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_tv_main" />


        <com.prettyyes.user.app.view.tvbtnetv.EditTextDel
            android:textColor="@color/black"
            android:textColorHint="@color/grey_tv_main"
            android:textSize="@dimen/font_big"
            android:id="@+id/edit_bindPhoneAct_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
         />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <com.prettyyes.user.app.view.tvbtnetv.EditTextDel
                android:textColor="@color/black"
                android:textColorHint="@color/grey_tv_main"

                android:textSize="@dimen/font_big"
                android:id="@+id/edit_bindPhoneAct_verycode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/verify_hint"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="30dp"
              />

            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_bindPhoneAct_getcode"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/verify_getcode"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </LinearLayout>



    <Button

        android:id="@+id/btn_bindPhoneAct_bind"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_btn_thremdrakgreen"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_big" />
</LinearLayout>