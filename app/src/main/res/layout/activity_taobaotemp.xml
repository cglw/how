<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.prettyyes.user.app.ui.template.TaobaotempActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_normal"
        android:background="@drawable/bg_retange_grey_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/distance_small"
        >


        <EditText
            android:id="@+id/edit_taobao_url"
            style="@style/template_edit"
            android:layout_marginLeft="@dimen/distance_small"
            android:layout_marginRight="@dimen/distance_small"
            android:layout_weight="1"
            android:width="0dp"
            android:gravity="center|left"
            android:hint="@string/template_taobao_url"
            android:lines="1"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/btn_taobao_confirm"
            style="@style/btn_select_yellow_round"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/template_taobao_confirm"
            android:text="@string/confirm">

        </Button>

    </LinearLayout>

    <View
        style="@style/line_grey"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/distance_normal"
        >

        <TextView
            style="@style/tv_content"
            android:gravity="center"
            android:text="@string/template_taobao_go_desc"
            android:textColor="@color/secondaryTextBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_normal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_go_taobao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/how_to_taobao"
                />

            <ImageView
                android:id="@+id/img_go_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_normal"
                android:src="@mipmap/how_to_weidian"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
