<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/coordlayout_kollistAdpLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_small"
                android:layout_marginRight="@dimen/distance_small"
                android:layout_marginTop="@dimen/distance_small">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="10dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black_main"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/black_main"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_main"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/black_main"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/rel_kollistAdp_headimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.prettyyes.user.app.view.imageview.RoundImageView
                        android:id="@+id/img_kollistAdp_headimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/myhead"
                        app:borderRadius="35dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_kollistAdp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/rel_kollistAdp_headimg"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="一个提供最便携旅行美妆产品以色列品牌"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"/>

                <TextView
                    android:id="@+id/tv_kollistAdp_honor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_kollistAdp_name"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_small"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_kollistAdp_honor"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_zeze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.prettyyes.user.app.view.app.RoundView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            app:bg_color="@color/theme_red"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/zeze"
                            android:textColor="@color/theme_darkgreen"
                            android:textSize="@dimen/font_small"/>

                        <TextView
                            android:id="@+id/tv_kollistAdp_zezenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/theme_darkgreen"
                            android:textSize="@dimen/font_small"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_zeze"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.prettyyes.user.app.view.app.RoundView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            app:bg_color="@color/theme_red"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/pei"
                            android:textColor="@color/theme_darkgreen"
                            android:textSize="@dimen/font_small"/>

                        <TextView
                            android:id="@+id/tv_kollistAdp_peinum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/theme_darkgreen"
                            android:textSize="@dimen/font_small"/>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_kollistAdp_sendque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/kol_list_ask_button"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black_main"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="19"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_cf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="【成分】"
                        android:textColor="@color/grey_tv_main"
                        android:textSize="@dimen/font_small"/>

                    <include layout="@layout/layout_kol_tags"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_main"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_gn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【功能】"
                        android:textColor="@color/grey_tv_main"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/tv_kollistAdp_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_below="@id/tv_gn"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="买买买是一包包治百病的板蓝根是一包包治百病的。"
                        android:textColor="@color/black_main"
                        android:textSize="@dimen/font_mid"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_main"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_bl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【病例】"
                        android:textColor="@color/grey_tv_main"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/tv_bottom"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/look_more"
                        android:textColor="@color/theme_red"
                        android:textSize="10sp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tv_bottom"
                        android:layout_below="@id/tv_bl"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/ta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Ta"
                            android:textColor="@color/black_main"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/tv_kollistAdp_num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ta"
                            android:layout_toRightOf="@id/ta"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="reply"
                            android:textColor="@color/black_main"
                            android:textSize="@dimen/font_mid"/>

                        <TextView
                            android:id="@+id/tv_kollistAdp_num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/tv_kollistAdp_num1"
                            android:layout_toRightOf="@id/ta"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="sdmnalsnd"
                            android:textColor="@color/black_main"
                            android:textSize="@dimen/font_mid"/>

                        <TextView
                            android:id="@+id/tv_kollistAdp_num3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ta"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="total"
                            android:textColor="@color/black_main"
                            android:textSize="@dimen/font_mid"/>

                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>