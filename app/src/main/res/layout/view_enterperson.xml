<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.prettyyes.user.app.view.imageview.RoundImageView
        android:id="@+id/img_liveAct_enter_headimg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_liveact_enter"
        />

    <TextView
        android:id="@+id/tv_liveAct_enter_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_liveAct_enter_headimg"
        android:text="xxx进入专场"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black_main"
        android:textSize="@dimen/font_big" />

</RelativeLayout>
