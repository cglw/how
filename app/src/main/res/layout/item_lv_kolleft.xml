<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordlayout_kollistAdpLeft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >


        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_marginRight="30dp"
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@mipmap/bg_kollist_left"
            android:gravity="left">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.prettyyes.user.app.view.imageview.RoundImageView
                    android:id="@+id/img_kollistLeftAdp_headimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/myhead"
                    app:borderRadius="35dp" />

                <TextView
                    android:id="@+id/tv_kollistLeftAdp_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/img_kollistLeftAdp_headimg"
                    android:gravity="right|center_vertical"

                    android:lines="1"
                    android:text="Jackie Closet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_big" />

                <TextView

                    android:id="@+id/tv_kollistLeftAdp_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_kollistLeftAdp_nickname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/img_kollistLeftAdp_headimg"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="一个提供最便携旅行美妆产品以色列品牌"
                    android:textColor="@color/theme_lightgray"
                    android:textSize="@dimen/font_big" />

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="164dp"
            android:background="@drawable/bg_oval_grey_radius_15"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_heart"
                    android:tint="@color/theme_red" />

                <TextView
                    android:id="@+id/tv_kollistLeftAdp_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:tint="@color/theme_yellow" />

                <TextView
                    android:id="@+id/tv_kollistLeftAdp_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_start_black"
                    android:tint="@color/blue_dark" />

                <TextView
                    android:id="@+id/tv_kollistLeftAdp_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>