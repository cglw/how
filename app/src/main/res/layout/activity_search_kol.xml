<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_txt">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_searchkolAct_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/font_big" />

        <com.prettyyes.user.app.view.tvbtnetv.EditTextDel
            android:drawableLeft="@mipmap/kolsearch_search"
            android:drawablePadding="10dp"
            android:id="@+id/edit_searchkolAct_input"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_searchkolAct_search"
            android:background="@drawable/bg_round_white_5"
            android:gravity="center_vertical"
            android:hint="@string/at_kol"
            android:paddingLeft="10dp"
            android:textColorHint="@color/grey_tv_main"
            android:textSize="@dimen/font_big" />
    </RelativeLayout>

    <com.prettyyes.user.app.view.lvandgrid.SwipeListView
        android:id="@+id/lv_searchkolAct_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.prettyyes.user.app.view.lvandgrid.SwipeListView>

</LinearLayout>
