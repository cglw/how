<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/settingItem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_bg_selector"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tvSettingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重置密码"
            android:textColor="@color/black"/>

        <ImageView

            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_right_arrow"
            android:tint="@color/black"/>


        <TextView
            android:id="@+id/tvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_small"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ivArrow"
            android:layout_toRightOf="@+id/tvSettingText"
            android:gravity="right"
            android:text=""/>
        <com.prettyyes.user.app.view.app.RoundView
            android:visibility="gone"
            android:id="@+id/roundview_unread"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:bg_color="@color/theme_red"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="10dp"/>


    </RelativeLayout>

    <View
        android:id="@+id/view_split"
        style="@style/line_grey"
        android:visibility="gone"/>
</LinearLayout>
