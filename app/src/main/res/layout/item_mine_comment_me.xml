<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:layout_marginLeft="@dimen/margin_mine_fragment"
    android:layout_marginRight="@dimen/margin_mine_fragment"
    android:layout_marginTop="@dimen/margin_mine_fragment"
    android:background="@drawable/bg_gradient_comment"
    android:orientation="vertical"
    android:padding="6dp"
    >


    <TextView
        android:id="@+id/tv_content"
        style="@style/tv_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/distance_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="我：示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字示例文字…"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@mipmap/how_myfeeds_ask_container"
        android:orientation="vertical"
        android:paddingBottom="@dimen/distance_small"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/distance_small">

        <include layout="@layout/layout_mineitem_top"/>

        <include layout="@layout/layout_mine_line"/>

        <include layout="@layout/layout_mine_kol_comment"/>
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/how_myfeeds_unread"
        android:id="@+id/img_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>