<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_popup"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@mipmap/share_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_popupshare_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/distance_normal"
        android:background="@mipmap/how_dislike_button"
        android:textColor="@color/black_mid"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/lin_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginTop="@dimen/distance_big"
            android:text= "@string/share_dialog_title"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/font_title"
            android:textStyle="bold"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/distance_normal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QQ | QQ"
                    android:textColor="@color/textBlack"
                    />

                <ImageView
                    android:id="@+id/img_popup_qq"
                    android:scaleType="centerCrop"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_qq"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/distance_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WECHAT | 微信"
                    android:textColor="@color/textBlack"
                    />

                <ImageView
                    android:id="@+id/img_popup_weixin"
                    android:scaleType="centerCrop"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_wechat"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WEIBO | 微博"
                    android:textColor="@color/textBlack"
                    />

                <ImageView
                    android:id="@+id/img_popup_sina"
                    android:scaleType="centerCrop"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_weibo"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance_25"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MOMENTS | 朋友圈"
                    android:textColor="@color/textBlack"
                    />

                <ImageView
                    android:id="@+id/img_popup_weixin_friend"
                    android:scaleType="centerCrop"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_friends"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>