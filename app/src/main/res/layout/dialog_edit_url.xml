<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        style="@style/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_normal"
        android:text="添加链接"/>

    <EditText
        android:id="@+id/edit_name"
        style="@style/template_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:background="@color/home_reply_bg"
        android:hint="请输入链接名称"
        android:maxLength="20"
        android:padding="@dimen/distance_normal"
        />

    <View
        style="@style/line_grey"/>

    <EditText
        android:id="@+id/edit_url"
        style="@style/template_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:background="@color/home_reply_bg"
        android:hint="请输入链接地址"
        android:padding="@dimen/distance_normal"
        />

    <View
        style="@style/line_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancle"
            style="@style/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_layout"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel"/>

        <View
            style="@style/line_grey"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_layout"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/confirm"/>


    </LinearLayout>

</LinearLayout>