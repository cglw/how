<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context="com.prettyyes.user.app.ui.person.AddTagActivity">

    <TextView

        android:id="@+id/edit_addtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+添加自定义标签" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_round_yellow_5"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"

            android:padding="5dp">

            <com.prettyyes.user.app.view.FlowLayout
                android:id="@+id/flowlayout_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.prettyyes.user.app.view.FlowLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="热门标签"
        android:textColor="@color/black_main"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp">

            <com.prettyyes.user.app.view.FlowLayout
                android:id="@+id/flowlayout_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.prettyyes.user.app.view.FlowLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
