<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_layout"
    >

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_category_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/select"/>

    <TextView
        android:id="@+id/tv_category_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_toLeftOf="@id/img_select"
        android:layout_toRightOf="@id/img_category_ic"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <View
        style="@style/line_grey"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"></View>
</RelativeLayout>