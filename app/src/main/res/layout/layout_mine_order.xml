<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:showIn="@layout/fragment_mine_v8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_order_buy"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/select_layout_white"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/how_purchase"/>

            <TextView
                style="@style/tv_content"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="@string/mine_item_order_buy"
                android:textSize="@dimen/font_hint"/>

        </LinearLayout>

        <View
            style="@style/divider_vertical"
            android:layout_width="1dp"/>


        <LinearLayout
            android:id="@+id/ll_go_cart"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/select_layout_white"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/how_shoppcart"/>

            <TextView
                style="@style/tv_content"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="@string/mine_item_order_cart"
                android:textSize="@dimen/font_hint"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line_order_seller"
        style="@style/divider"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll_order_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_order_sell"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/select_layout_white"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/how_sale"/>

            <TextView
                style="@style/tv_content"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="@string/mine_item_order_sell"
                android:textSize="@dimen/font_hint"/>

        </LinearLayout>

        <View
            style="@style/divider_vertical"
            android:layout_width="1dp"/>

        <LinearLayout
            android:id="@+id/ll_go_account"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/select_layout_white"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/how_account_setting"/>

            <TextView
                style="@style/tv_content"
                android:layout_marginTop="@dimen/distance_normal"
                android:text="@string/mine_item_order_account"
                android:textSize="@dimen/font_hint"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>