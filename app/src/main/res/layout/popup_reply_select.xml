<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordlayout_kollistAdpLeft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/distance_normal">

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_title"
        android:text="@string/reply_select_title"
        />


    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/distance_normal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/category1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_normal"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/tv_title"
                android:text="@string/reply_select_from_brand"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_brand_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_small"
                android:text="@string/reply_select_from_brand_desc"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginTop="@dimen/distance_normal">

        <RelativeLayout
            android:id="@+id/ll_new_sku"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_new"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/category2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_normal"
                android:layout_toRightOf="@id/img_new"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_title"
                    android:text="@string/reply_select_from_newsku"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_small"
                    android:text="@string/reply_select_from_newsku_desc"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_sku"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/ll_new_sku"
            android:layout_marginTop="@dimen/distance_normal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_have"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/category3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_normal"
                android:layout_toRightOf="@id/img_have"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/tv_title"
                    android:text="@string/reply_select_from_sku"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_small"
                    android:text="@string/reply_select_from_sku_desc"/>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_aply_kol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/distance_normal"
            android:paddingRight="@dimen/distance_small">

            <TextView
                style="@style/tv_title"
                android:text="立即申请成为好手"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                style="@style/tv_content"
                android:layout_marginTop="@dimen/distance_4"
                android:text="解锁商品模板，自由推荐所爱"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

