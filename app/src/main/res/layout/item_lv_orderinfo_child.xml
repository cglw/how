<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_orderinfochildAdp_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:text="约会必杀套装"
        android:textColor="@color/main_black"
        android:textSize="@dimen/font_big"/>

    <RelativeLayout
        android:id="@+id/rel_orderinfochildAdp_oneImg"
        android:layout_width="match_parent"
        android:layout_height="93.5dp"
        android:background="@drawable/select_layout"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_orderinfochildAdp_uintimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_defaultimg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/img_orderinfochildAdp_uintimg"
            android:layout_toRightOf="@id/img_orderinfochildAdp_uintimg"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_orderinfochildAdp_uintname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="POKER家秋新品 简约COS风手镯"
                android:textColor="@color/main_black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_orderinfochildAdp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_orderinfochildAdp_uintname"
                android:layout_marginTop="5dp"
                android:text="￥169.00"
                android:textColor="@color/main_black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:text="购买数量："
                android:textColor="@color/main_black"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_orderinfochildAdp_oneuintnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="X 1"
                android:textColor="@color/main_black"
                android:textSize="@dimen/font_big_more" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/line_orderinfochildAdp"
        style="@style/line_grey"/>

</LinearLayout>