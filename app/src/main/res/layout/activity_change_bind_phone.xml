<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    tools:context=".app.ui.ChangeBindPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="为了保障你的账户安全，请先验证身份，验证成功后进行下一步操作"
            android:textColor="@color/grey_tv_main"
            android:textSize="@dimen/font_mid" />

        <TextView
            android:id="@+id/tv_changebindphoneAct_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="156****1707"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <RelativeLayout
            android:layout_width="203dp"
            android:layout_height="40dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.prettyyes.user.app.view.tvbtnetv.EditTextDel
                android:id="@+id/edit_changebindphoneAct_code"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="验证码"
                android:maxEms="6"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/font_big" />

            <Button
                android:id="@+id/btn_changebindphoneAct_getcode"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/verify_getcode"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            style="@style/line_grey"
            android:layout_width="203dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"></View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_changebindphoneAct_confirm"
        style="@style/btn_select_black"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:text="确认" />

</LinearLayout>
