        <!--android:layout_gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--</fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>-->
</FrameLayout>