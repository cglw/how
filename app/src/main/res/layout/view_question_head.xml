                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                android:src="@mipmap/ic_defaultimg" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_questionView_que_moreimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_round_translate_5"
                android:text="更多"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_questionView_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_otherqueAdp_que"
