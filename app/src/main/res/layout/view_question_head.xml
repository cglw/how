            android:textSize="@dimen/font_small"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center">


        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
