<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroundWhit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_covery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_spu_img_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_defaultimg"
        />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/distance_small">

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品名称，商品名称，商品名称"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_type"
            style="@style/tv_content"
            android:text="类型"/>

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_content"
            android:layout_marginTop="@dimen/distance_small"
            android:text="￥12.0"
            android:textColor="@color/theme_red"/>
    </LinearLayout>

</LinearLayout>