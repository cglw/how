<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"

    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_question"
        android:gravity="center_horizontal"
        android:orientation="vertical"
      >

        <TextView
            android:id="@+id/tv_suitlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="套系的名称"
            android:textColor="#565656"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_suitlist_covery"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/tv_suitlist_name"
            android:layout_marginBottom="43dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_defaultimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />


                <TextView
                    android:id="@+id/tv_suitlist_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="浏览"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />

                <TextView
                    android:id="@+id/tv_suitlist_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="13"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="购买"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />

                <TextView
                    android:id="@+id/tv_suitlist_buy"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="13"
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/font_mid" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>