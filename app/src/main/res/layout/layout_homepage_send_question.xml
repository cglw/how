<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:background="@drawable/bg_round_white"
    android:paddingBottom="@dimen/distance_normal"
    android:paddingTop="@dimen/distance_small"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ask_box"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/ask_logo"/>

    <TextView
        android:id="@+id/tv_askView_asktext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="你相信最好的推荐来自最深的了解"
        android:textColor="@color/black_main"
        android:textSize="@dimen/font_big"/>

    <LinearLayout
        android:id="@+id/view_aksview_ask"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_small"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rang_grey_radius_2"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即"
            android:textColor="@color/black_main"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/view_aksview_btnbg"
            android:layout_width="55dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/distance_small"
            android:background="@mipmap/home_yellow_ask_icon"
            android:gravity="center"
            android:text="发问"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>