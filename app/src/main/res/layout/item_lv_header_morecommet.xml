<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_moreCmtAct_bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_order_info"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="70dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/lin_moreCmtAct_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/allreply_comment_icon" />

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rel_moreCmtAct_imgs"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <com.prettyyes.user.app.view.imageview.RoundImageView
                        android:id="@+id/img_moreCmtAct_queimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_defaultimg"
                        app:borderRadius="3dp" />


                    <TextView
                    android:id="@+id/tv_moreCmtAct_moreimgtag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_round_translate_5"
                    android:text="更多"

                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"
                    android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <com.prettyyes.user.app.ui.appview.QuestionTextView
                android:id="@+id/etv_moreCmtAct_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:layout_toRightOf="@id/lin_moreCmtAct_imgs"
                android:clickable="true"
                android:paddingBottom="5dp"
                android:minLines="3"
                android:textColor="@color/main_black"
                android:textSize="@dimen/font_big" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_moreCmtAct_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingRight="10dp"
                android:text="By"
                android:textColor="@color/main_black"
                android:textSize="@dimen/font_mid" />

            <View
                android:layout_width="3dp"
                android:layout_height="13dp"
                android:background="@color/theme_red"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/view_moreCmtAct_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginTop="-8dp"
        android:background="@mipmap/reply_top_container2"></RelativeLayout>

</LinearLayout>
