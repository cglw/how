<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/hintBlack"/>
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp"/>
            <corners android:radius="100dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <stroke
                    android:width="0.5dp"
                    android:color="@color/hintBlack"/>
                <padding
                    android:bottom="0.5dp"
                    android:left="0.5dp"
                    android:right="0.5dp"
                    android:top="0.5dp"/>

                <corners android:radius="100dp"/>
                <gradient
                    android:centerColor="@color/score_center"
                    android:endColor="@color/score_end"
                    android:startColor="@color/score_start"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="0.5dp"
                    android:color="@color/hintBlack"/>
                <padding
                    android:bottom="0.5dp"
                    android:left="0.5dp"
                    android:right="0.5dp"
                    android:top="0.5dp"/>

                <corners android:radius="100dp"/>
                <gradient
                    android:centerColor="@color/score_center"
                    android:endColor="@color/score_end"
                    android:startColor="@color/score_start"/>
            </shape>
        </clip>
    </item>
</layer-list>
